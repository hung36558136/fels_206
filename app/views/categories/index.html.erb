<% provide :title, (t "category") %>
<div class="col-md-12">
  <table class="table text-center">
    <tr class="table-title">
      <th class="text-center cate-index"><%= t "index" %></th>
      <th class="text-center cate-name"><%= t ".category_name" %></th>
      <th class="text-center cate-desc"><%= t ".description" %></th>
      <th class="text-center cate-progess"><%= t ".learn_progress" %></th>
      <th class="text-center cate-created"><%= t ".create_lesson" %></th>
    </tr>
    <%= render "category" %>
  </table>
  <%= will_paginate %>
</div>
