<% if logged_in? %>
  <div class="row homepage">
    <div class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="learn_info_abstract">
        <%= render "shared/learn_info_abstract" %>
      </section>
    </div>
    <div class="col-md-8">
      <% if current_user.is_admin %>
        <section class="admin_navbar">
          <%= render "shared/admin_navbar" %>
        </section>
      <% else %>
        <section class="navbar">
          <%= render "shared/navbar" %>
        </section>
      <% end %>
      <section class="recent_activities">
        <%= render "shared/recent_activities" %>
      </section>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".welcome" %></h1>

    <h2><%= t ".slogan" %></h2>

    <%= link_to t(".signup"), signup_path , class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("logo_framgia.png", alt: "logo_framgia"), t(".link") %>
<% end %>
