<% provide :title, (t "category") %>
<%= link_to t("add_category"), new_admin_category_path, class: "btn btn-success" %>
<div class="col-md-12">
  <table class="table text-center">
    <tr class="table-title">
      <th class="text-center cate-index"><%= t "index" %></th>
      <th class="text-center cate-name"><%= t ".category_name" %></th>
      <th class="text-center cate-desc"><%= t ".description" %></th>
      <th class="text-center cate-created"><%= t ".created" %></th>
      <th class="text-center cate-edit"><%= t ".edit" %></th>
      <th class="text-center cate-del"><%= t ".delete" %></th>
    </tr>
    <%= render "category" %>
  </table>
  <%= will_paginate %>
</div>
