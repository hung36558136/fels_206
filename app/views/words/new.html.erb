<% provide :title, t(".wordlist") %>
<%= form_tag(url: words_path, :method => "post", id: "search-form") do %>
  <div class="user-box-search">
    <div class="select-category">
      <label id="label-cate"><%= t ".category" %></label>
      <%= select_tag(:category_id, options_for_select(@categories
        .collect{|category| [category.name, category.id]},
        params[:category_id]), include_blank: Settings.all,
        class: "categories-search", prompt: t(".select")) %>
    </div>
    <div class="user-filter-word">
      <label class="title"><%= t ".status" %></label>
      <label class="radio-inline">
        <%= radio_button_tag(:status,"all", params[:status].eql?("all"),
          :checked => 'true') %>
        <%= t ".all" %>
      </label>
      <label class="radio-inline">
        <%= radio_button_tag(:status,"learned",
          params[:status].eql?("learned")) %>
        <%= t ".learned" %>
      </label>
      <label class="radio-inline">
        <%= radio_button_tag(:status,"notlearned",
          params[:status].eql?("notlearned")) %>
        <%= t ".notlearned" %>
      </label>
      <%= submit_tag t(".filter"), class: "btn btn-primary", id: "btn-search"%>
    </div>
  </div>
  <table class="table-word-answer">
    <tr class="table-word-answer-title">
      <th class="word-answer-index"><%= t ".index" %></th>
      <th class="word-answer-word"><%= t ".word" %></th>
      <th class="word-answer-answer"><%= t ".answer" %></th>
    </tr>
    <% @words.each_with_index do |word, index|  %>
      <tr>
      <td>
      <% params[:page] ||= "1" %>
      <%= get_index params[:page], index, Settings.word.per_page %>
      </td>
      <td><%= word.w_content %></td>
      <td><%= word.a_content %></td>
    </tr>
    <% end %>
  </table>
<% end %>
